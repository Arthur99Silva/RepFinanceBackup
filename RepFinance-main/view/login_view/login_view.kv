<LoginView>:

    BoxLayout:
        orientation: "vertical"
        padding: [100, 60, 100, 0]  # Ajuste para centralizar melhor
        spacing: 20

        Label:
            text: "FAÇA LOGIN"
            font_size: '28sp'
            bold: True
            color: (0, 0, 0, 1)
            size_hint: (1, 0.3)
            halign: 'center'
            valign: 'middle'
            text_size: self.size

        BoxLayout:
            orientation: "horizontal"
            size_hint_y: None
            height: 40
            spacing: 10

            Label:
                text: "Usuário:"
                font_size: '18sp'
                color: (0, 0, 0, 1)
                size_hint_y: None
                height: 40
                halign: 'right'
                valign: 'middle'
                text_size: self.size

            TextInput:
                multiline: False
                font_size: '18sp'
                size_hint_y: None
                height: 40
                hint_text: "Digite seu usuário"
                on_text: root.usuario = self.text

        BoxLayout:
            orientation: "horizontal"
            size_hint_y: None
            height: 40
            spacing: 10

            Label:
                text: "Senha:"
                font_size: '18sp'
                color: (0, 0, 0, 1)
                size_hint_y: None
                height: 40
                halign: 'right'
                valign: 'middle'
                text_size: self.size

            TextInput:
                password: True
                password_mask: "*"
                multiline: False
                font_size: '18sp'
                size_hint_y: None
                height: 40
                hint_text: "Digite sua senha"
                on_text: root.senha = self.text

        BoxLayout:
            orientation: "horizontal"
            size_hint_y: None
            height: 50
            padding: [0, 20]

            Widget:  # Espaço flexível para centralizar o botão

            Button:
                text: "Entrar"
                size_hint: None, None
                size: 120, 50
                font_size: '18sp'
                background_color: 0.26, 0.7, 0.3, 1
                color: 1, 1, 1, 1
                bold: True
                on_release: root.login()

        BoxLayout:
            size_hint_y: None
            height: 30

            Label:
                text: ""

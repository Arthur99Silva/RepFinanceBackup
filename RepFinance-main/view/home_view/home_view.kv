<HomeView>:
    BoxLayout:
        orientation: "vertical"

        Label:
            size_hint_y: None
            height: 60
            text: "RepFinance"
            font_size: '32sp'
            bold: True
            halign: "left"
            valign: "middle"
            text_size: self.size
            padding: [20, 0, 0, 15]
            color: (1, 1, 1, 1)

            canvas.before:
                Color:
                    rgba: 67/255, 194/255, 77/255, 1
                RoundedRectangle:
                    size: self.size
                    pos: self.pos
                    radius: [0, 0, 15, 15]
            
        BoxLayout:
            orientation: "horizontal"

            BoxLayout:
                orientation: "vertical"
                size_hint_x: None
                width: 280
                pos_hint: {"top": 1}
                spacing: 15
                padding: [15, 25, 15, 15]
                
                canvas.before:
                    Color:
                        rgba: 245/255, 247/255, 245/255, 1
                    RoundedRectangle:
                        size: self.size
                        pos: self.pos
                        radius: [10, 10, 10, 10]

                Button:
                    size_hint_y: None
                    height: 45
                    text: "Home"
                    text_size: self.size
                    halign: "left"
                    valign: "center"
                    padding: [25, 0, 0, 0]
                    background_normal: ''
                    background_color: 0.26, 0.7, 0.3, 1
                    color: 1, 1, 1, 1
                    border: [16, 16, 16, 16]

                Button:
                    size_hint_y: None
                    height: 45
                    text: "Gerenciar Moradores"
                    text_size: self.size
                    halign: "left"
                    valign: "center"
                    padding: [25, 0, 0, 0]
                    background_normal: ''
                    background_color: 0.26, 0.7, 0.3, 1
                    color: 1, 1, 1, 1
                    border: [16, 16, 16, 16]
                    on_release: root.gerenciar_moradores()

                Button:
                    size_hint_y: None
                    height: 45
                    text: "Gerenciar Despesas"
                    text_size: self.size
                    halign: "left"
                    valign: "center"
                    padding: [25, 0, 0, 0]
                    background_normal: ''
                    background_color: 0.26, 0.7, 0.3, 1
                    color: 1, 1, 1, 1
                    border: [16, 16, 16, 16]
                    on_release: root.gerenciar_despesas()

                Button:
                    size_hint_y: None
                    height: 45
                    text: "Gerenciar Compras"
                    text_size: self.size
                    halign: "left"
                    valign: "center"
                    padding: [25, 0, 0, 0]
                    background_normal: ''
                    background_color: 0.26, 0.7, 0.3, 1
                    color: 1, 1, 1, 1
                    border: [16, 16, 16, 16]
                    on_release: root.gerenciar_compras()

                Button:
                    size_hint_y: None
                    height: 45
                    text: "Gerenciar Pagamentos"
                    text_size: self.size
                    halign: "left"
                    valign: "center"
                    padding: [25, 0, 0, 0]
                    background_normal: ''
                    background_color: 0.26, 0.7, 0.3, 1
                    color: 1, 1, 1, 1
                    border: [16, 16, 16, 16]

                Label:
                    text: ""

            BoxLayout:
                orientation: "vertical"
                padding: [30, 30, 30, 30]

                Label:
                    text: "Relat√≥rios de Fechamentos"
                    font_size: '26sp'
                    color: (0, 0, 0, 1)
                    bold: True
                    halign: 'center'
                    valign: 'middle'
                    text_size: self.size

                Label:
                    text: "Seja bem-vindo!"
                    font_size: '20sp'
                    color: (0, 0, 0, 0.7)
                    multiline: True
                    halign: 'center'
                    valign: 'middle'
                    text_size: (self.width - 40, None)
                    padding: [20, 20, 20, 20]

                BoxLayout:
                    orientation: 'horizontal'
                    spacing: 10
                    padding: [10, 10, 10, 10]


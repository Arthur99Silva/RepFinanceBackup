<HomeView>:
    BoxLayout:
        orientation: "vertical"

        Label:
            size_hint_y: None
            height: 60
            text: "RepFinance"
            font_size: '30sp'
            halign: "left"
            text_size: self.size
            padding: [15, 0, 0, 15]

            canvas.before:
                Color:
                    rgba: 67/255, 194/255, 77/255, 1
                Rectangle:
                    size: self.size
                    pos: self.pos
            
        BoxLayout:
            orientation: "horizontal"

            BoxLayout:
                orientation: "vertical"
                size_hint_x: None
                width: 300
                pos_hint: {"top": 1}
                spacing: 5
                padding: [10, 10, 10, 0]

                canvas:
                    Color:
                        rgba: 188/255, 228/255, 185/255, 1
                    Rectangle:
                        size: self.size
                        pos: self.pos


                Button:
                    size_hint_y: None
                    height: 35
                    text: "Home"
                    text_size: self.size
                    halign: "left"
                    valign: "center"
                    padding: [10, 0, 0, 0]

                Button:
                    size_hint_y: None
                    height: 35
                    text: "Gerenciar Moradores"
                    text_size: self.size
                    halign: "left"
                    valign: "center"
                    padding: [10, 0, 0, 0]
                    on_release: root.gerenciar_moradores()

                Button:
                    size_hint_y: None
                    height: 35
                    text: "Gerenciar Despesas"
                    text_size: self.size
                    halign: "left"
                    valign: "center"
                    padding: [10, 0, 0, 0]
                    on_release: root.gerenciar_despesas()

                Button:
                    size_hint_y: None
                    height: 35
                    text: "Gerenciar Compras"
                    text_size: self.size
                    halign: "left"
                    valign: "center"
                    padding: [10, 0, 0, 0]
                    on_release: root.gerenciar_compras()

                Button:
                    size_hint_y: None
                    height: 35
                    text: "Gerenciar Pagamentos"
                    text_size: self.size
                    halign: "left"
                    valign: "center"
                    padding: [10, 0, 0, 0]

                Label:
                    text: ""


            BoxLayout:
                orientation: "vertical"
                padding: [20, 15, 20, 0]

                Label:
                    text: "Relat√≥rios de fechamentos"
                    color: (0, 0, 0, 1)

                Label:
                    color: (0, 0, 0, 1)
                    text: "Seja bem-vindo!"
                    multiline: True
                    text_size: (self.width, None)
                